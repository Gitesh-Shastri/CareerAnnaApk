<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".fragement.ui_fragments.signIn_buttons">

    <RelativeLayout
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/signUp"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:text="Create an account"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="35dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_create_account"
            android:layout_alignParentBottom="true"
            />

        <Button
            android:id="@+id/signin_with_email"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:text="Sign in with username/email"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="35dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_create_account"
            android:layout_above="@id/signUp"
            />

        <TextView
            android:id="@+id/forgot"
            android:text="Forgot password?"
            android:layout_centerHorizontal="true"
            android:textColor="#FFF"
            android:layout_marginBottom="10dp"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:layout_above="@id/signin_with_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</FrameLayout>