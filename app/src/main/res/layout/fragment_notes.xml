<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragement.NotesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic 3 Notes \n Select Notes From Below "
        android:textColor="@color/colorPrimary"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/weekText"
        />
        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_above="@+id/rest"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/weekText"
            android:layout_marginRight="20dp"
            android:id="@+id/expandableunit" />

        <com.github.barteksc.pdfviewer.PDFView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/expandableunit"
        android:id="@+id/pdfViewer"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        />
    </RelativeLayout>
</FrameLayout>