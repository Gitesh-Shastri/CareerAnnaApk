<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:weightSum="10"
        android:padding="20dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"
            android:src="@drawable/helper_overlay"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Course Name"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="10"
            android:orientation="horizontal">

            <ProgressBar
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:background="@color/red"
                android:textColor="@color/white"
                android:text="Continue  Lecture"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/star1"
                    android:src="@drawable/ic_star_black_24dp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/star2"
                    android:layout_toRightOf="@id/star1"
                    android:src="@drawable/ic_star_black_24dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/star3"
                    android:layout_toRightOf="@id/star2"
                    android:src="@drawable/ic_star_black_24dp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/star4"
                    android:layout_toRightOf="@id/star3"
                    android:src="@drawable/ic_star_black_24dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/star5"
                    android:layout_toRightOf="@id/star4"
                    android:src="@drawable/ic_star_border_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5(50)"
                    android:layout_below="@id/star1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:gravity="center"
                    />

            </RelativeLayout>

            <Button
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:background="#007AB9"
                android:textColor="@color/white"
                android:text="Review Now"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="0 out of 0 Lessons And Test Learned"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>