<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/snackbar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/signUp_progressCircle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/iv_ca_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/careeranna_logo"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="150dp"
        android:layout_height="50dp" />

    <com.google.android.gms.common.SignInButton
        android:layout_below="@id/iv_ca_logo"
        android:id="@+id/bt_google_sign_in_button"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        >
    </com.google.android.gms.common.SignInButton>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/bt_google_sign_in_button"
        />

    <View
        android:id="@+id/Middle"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1px"
        android:background="@android:color/white"
        android:layout_below="@id/fb_login_button"
        android:layout_marginTop="20dp"
        />

    <FrameLayout
        android:id="@+id/fragment_btAndFields"
        android:layout_below="@id/Middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </FrameLayout>

</RelativeLayout>
