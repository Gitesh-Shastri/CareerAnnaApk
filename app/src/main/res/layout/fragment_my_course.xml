<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragement.MyCoursesFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ccourses"
            android:textColor="@color/colorPrimary"
            android:id="@+id/current_courses"
            android:layout_marginLeft="10dp"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            />
        <android.support.v7.widget.CardView
            android:layout_below="@+id/current_courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/cardView1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/categoryImageC"
                    android:src="@drawable/sign_in"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deep Learning"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:id="@+id/categoriesTC"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mycourses"
            android:layout_below="@+id/cardView1"
            android:id="@+id/all_courses"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/all_courses"
            android:layout_marginRight="10dp"
            android:id="@+id/my_courses">
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>